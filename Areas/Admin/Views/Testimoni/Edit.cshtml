@model Testimoni

@{ Layout = "_AdminLayout"; }

<h2>Edit Testimoni</h2>
<hr />

<form method="post">
    <input type="hidden" name="TestimoniId" value="@Model.TestimoniId" />
    <input name="Name" value="@Model.UserName" /><br /><br />
    <input name="Role" value="@Model.UserRole" /><br /><br />
    <textarea name="Testimonial">@Model.Deskripsi</textarea><br /><br />

    <select name="Rating">
        @for (int i = 1; i <= 5; i++)
        {
            <option value="@i" selected="@(i == Model.Rating)">@i</option>
        }
    </select><br /><br />

    <button>Update</button>
</form>