@using Microsoft.AspNetCore.Http
@{
    Layout = null;
    var adminName = Context.Session.GetString("AdminName");
    var adminRole = Context.Session.GetString("AdminRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Panel - Neksara</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- BOOTSTRAP 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- BOOTSTRAP 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
      rel="stylesheet">


    <link href="~/css/admin.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: #212529;
        }

        .sidebar .nav-link {
            color: #adb5bd;
            font-size: 15px;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #343a40;
            color: #ffffff;
        }

        .sidebar .sidebar-title {
            font-size: 18px;
            font-weight: bold;
            color: #ffffff;
        }

        .content-wrapper {
            min-height: 100vh;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
<div class="container-fluid">
    <div class="row">

        <!-- ================= SIDEBAR ================= -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
            <div class="position-sticky pt-3">

                <div class="text-center mb-4">
                    <div class="sidebar-title">Neksara Admin Panel</div>
                    <small class="text-secondary">
                        @adminName (@adminRole)
                    </small>
                </div>

                <ul class="nav flex-column">

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="AdminDashboard"
                           asp-action="Index">
                            üìä Dashboard
                        </a>
                    </li>


                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Categories"
                           asp-action="Index">
                            üìÇ Kategori
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Topic"
                           asp-action="Index">
                            üìò Topik
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="TopicFeedback"
                           asp-action="Index">
                            üí¨ Feedback Topik
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Testimoni"
                           asp-action="Index">
                            ‚≠ê Testimoni
                        </a>
                    </li>

                    @* ===== SUPERADMIN ONLY ===== *@
                    @if (adminRole == "SuperAdmin")
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Admin"
                               asp-controller="ManageAdmin"
                               asp-action="Index">
                                üë§ Manage Admin
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link"
                           asp-area="Admin"
                           asp-controller="Archive"
                           asp-action="Index">
                            üóÑÔ∏è Archive Page
                        </a>
                    </li>

                </ul>

                <hr class="text-secondary" />

                <form asp-area=""
                      asp-controller="Auth"
                      asp-action="Logout"
                      method="post"
                      class="px-3">
                    <button type="submit"
                            class="btn btn-danger w-100">
                        Logout
                    </button>
                </form>
            </div>
        </nav>

        <!-- ================= MAIN CONTENT ================= -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content-wrapper">

            <!-- TOP BAR -->
            <div class="d-flex justify-content-between
                        align-items-center
                        pt-3 pb-2 mb-3 border-bottom">

                <!-- <h4 class="h4 mb-0">
                    Admin Dashboard
                </h4> -->
            </div>

            <!-- PAGE CONTENT -->
            @RenderBody()

            <!-- FOOTER -->
            <footer class="text-center mt-5 text-muted">
                ¬© @DateTime.Now.Year - Neksara Admin Panel
            </footer>
        </main>

    </div>
</div>

<!-- BOOTSTRAP JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
</script>

@RenderSection("Scripts", required: false)

</body>
</html>
